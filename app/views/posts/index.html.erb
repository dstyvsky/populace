<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table class="table">
  <thead>
    <tr>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr class="my_row">
        <td><%= image_tag((post.universal_picture_link), :class => "preview_image") %> </td>
        
        <td><%= link_to post.title, post.universal_link %> (<%=Domainatrix.parse(post.universal_link).domain %>)
            <br><%=post.body %>
            <br>by <%= post.user.name %></td>
        
        <td><%= link_to 'Comment', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>

    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
